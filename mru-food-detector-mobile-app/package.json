{
  "name": "mru-food-net",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "ios": "react-native run-ios",
    "start": "react-native run-android",
    "test": "jest",
    "lint": "eslint .",
    "clean-project": "rm -rf node_modules/ package-lock.json ios/Pods/ ios/Podfile.lock",
    "install-packages": "npm i && npx jetify && cd ios && pod install",
    "clean-install-packages": "npm run clean-project && npm run install-packages",
    "android": "npm run bundle:android && npm run bundle:android:clean && npx react-native run-android",
    "prebundle:android": "rm -rf android/app/build/outputs/apk/release/app-release.apk && rm -rf android/app/src/main/assets/index.android.bundle",
    "bundle:android": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
    "bundle:android:clean": "cd android/app/src/main/res && rm -rf drawable* && rm -rf raw",
    "prebuild:android": "npm run bundle:android && npm run bundle:android:clean",
    "build:android": "cd android && ./gradlew assembleRelease",
    "bundleRelease:android": "cd android && ./gradlew bundleRelease",
    "postinstall": "patch-package",
    "build:android-release": "cd android && ./gradlew clean && cd .. && npm run prebundle:android && npm run bundle:android && npm run bundle:android:clean && npm run prebuild:android && npm run build:android && echo 'You can find the generated APK at android/app/build/outputs/apk/release/app-release.apk.'",
    "reset-cache": "npx react-native start --reset-cache"
  },
  "dependencies": {
    "@expo/react-native-action-sheet": "^3.9.0",
    "@react-native-clipboard/clipboard": "^1.8.4",
    "@react-native-community/async-storage": "^1.12.1",
    "@react-native-community/masked-view": "^0.1.10",
    "@react-native-community/netinfo": "^6.0.0",
    "@react-native-community/viewpager": "^4.2.1",
    "@react-navigation/bottom-tabs": "^5.8.0",
    "@react-navigation/material-top-tabs": "^5.3.6",
    "@react-navigation/native": "^5.7.3",
    "@react-navigation/stack": "^5.9.0",
    "@reduxjs/toolkit": "^1.4.0",
    "@thecodingmachine/redux-toolkit-wrapper": "^1.1.0",
    "axios": "^0.21.1",
    "i18next": "^19.8.2",
    "lodash": "^4.17.21",
    "patch-package": "^6.4.7",
    "react": "17.0.1",
    "react-i18next": "^11.7.3",
    "react-native": "0.64.2",
    "react-native-date-picker": "^3.3.2",
    "react-native-device-info": "^8.1.7",
    "react-native-elements": "^3.4.2",
    "react-native-fast-image": "^8.3.4",
    "react-native-fbsdk": "^2.0.0",
    "react-native-fit-image": "^1.5.5",
    "react-native-flipper": "^0.62.0",
    "react-native-geolocation-service": "^5.0.0",
    "react-native-gesture-handler": "^1.8.0",
    "react-native-image-crop-picker": "^0.36.0",
    "react-native-image-picker": "^3.7.0",
    "react-native-keyboard-aware-scroll-view": "^0.9.3",
    "react-native-localize": "^2.1.1",
    "react-native-reanimated": "^1.13.0",
    "react-native-safe-area-context": "^3.1.7",
    "react-native-screens": "^2.11.0",
    "react-native-snackbar": "^2.2.4",
    "react-native-tab-view": "^2.15.2",
    "react-native-tab-view-viewpager-adapter": "^1.1.0",
    "react-native-vector-icons": "^7.1.0",
    "react-redux": "^7.2.1",
    "reanimated-bottom-sheet": "^1.0.0-alpha.22",
    "redux": "^4.0.5",
    "redux-flipper": "^1.4.0",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/runtime": "^7.8.4",
    "@react-native-community/eslint-config": "^1.1.0",
    "babel-jest": "^25.1.0",
    "eslint": "^6.5.1",
    "html-parse-stringify2": "2.0.1",
    "jest": "^25.1.0",
    "jetifier": "^1.6.8",
    "metro-react-native-babel-preset": "^0.59.0",
    "react-test-renderer": "16.13.1"
  },
  "jest": {
    "preset": "react-native"
  }
}
